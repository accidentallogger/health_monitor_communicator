       android:layout_marginTop="4dp" />

   <!-- Error for Heart Rate -->
   <TextView
       android:id="@+id/tvErrorRangeHr"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="--"
       android:textColor="@android:color/holo_red_dark"
       android:visibility="gone"
       app:layout_constraintTop_toBottomOf="@+id/cardVitals"
       app:layout_constraintStart_toStartOf="@+id/picker_hr"
       app:layout_constraintEnd_toEndOf="@+id/picker_hr"
       android:layout_marginTop="4dp" />

   <!-- Guideline -->
   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guideline2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintGuide_percent="0.5" />

   <!-- Group Picker -->
   <androidx.constraintlayout.widget.Group
       android:id="@+id/group_picker"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:constraint_referenced_ids="textView15,textView13,textView9,picker_systolic,picker_diastolic,picker_hr" />
   <!-- Floating Action Button -->
   <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:id="@+id/bt_measure_bp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:contentDescription="Start BP"
       android:layout_margin="24dp"

       app:srcCompat="@android:drawable/ic_media_play"
   app:tint="@color/white"
       app:backgroundTint="@color/button_background_tint"
   app:layout_constraintBottom_toBottomOf="parent"
   app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>